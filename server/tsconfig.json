{
  "compilerOptions": {
    "target": "ES2020",         // or "ES2015" minimum
    "module": "ES2020",         // recommended with ESM packages
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,       // helps avoid 3rd party type issues
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
